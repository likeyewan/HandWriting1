<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_title"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <com.example.handwriting.other.MyImgBtn
        android:id="@+id/mm"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        ></com.example.handwriting.other.MyImgBtn>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="center"
        android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jin_han"
        android:text="今日汉字"
        android:layout_gravity="center"
        android:textSize="30dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/num"
                android:textSize="50dp"
                android:layout_gravity="center"
                android:text="15">
            </TextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/fen_day"
            android:text="预计天数"
            android:textSize="30dp">
        </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/day"
        android:textSize="50dp"
        android:text="15">
    </TextView>
    </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学习进度"></TextView>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/f_pro">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/f_all"></TextView>
            </LinearLayout>
            <com.example.handwriting.other.MyImgBtn
                android:id="@+id/han_list"
                android:layout_width="60dp"
                android:layout_height="40dp"
                ></com.example.handwriting.other.MyImgBtn>
            <com.example.handwriting.other.MyImgBtn
                android:id="@+id/f_cz"
                android:layout_width="60dp"
                android:layout_height="40dp"
                ></com.example.handwriting.other.MyImgBtn>

        </LinearLayout>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/f_p"
                style="?android:attr/progressBarStyleHorizontal"></ProgressBar>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:orientation="horizontal">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:id="@+id/write"
        android:layout_weight="1"
        android:background="@drawable/btn_stu"
        android:textColor="@color/white"
        android:text="开始学习">
    </Button>

    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:id="@+id/review"
        android:visibility="gone"
        android:background="@drawable/btn_stu"
        android:textColor="@color/white"
        android:text="开始复习">
    </Button>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_gravity="center">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wrong"
        android:layout_weight="1"
        android:background="@drawable/btn_stu"
        android:textColor="@color/white"
        android:text="错字集"></Button>
    <Button
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/study"
        android:background="@drawable/btn_stu"
        android:textColor="@color/white"
        android:text="学习记录">
    </Button>
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/single_word"
        android:background="@drawable/btn_stu"
        android:layout_marginRight="35dp"
        android:textColor="@color/white"
        android:text="单字训练">
    </Button>
   <!--<Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_word"
        android:text="添加汉字数据">
    </Button>!-->
</LinearLayout>